@model Cinema
@{
    ViewData["Title"] = "Cinema Silme";
}

<div class="row text">

    <div class="col-md-8 offset-2">
        <p>
            <h1>@Model.Name Silme</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="LogolView" class="border-info rounded-circle" style="max-width=150px;" />
                </div>
                <div class="form-group mt-1">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                </div>
                <div class="form-group mt-1">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group mt-1">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
                <div class="form-group mt-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Sil" class="btn btn-danger float-lg-end" />
                    </form>

                    <a class="btn btn-outline-secondary" asp-action="Index">Listeye Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePictureUrlView');
            output.src = $('#Logo').val();
        });

        $('#Logo').on('change', function () {
            var output = document.getElementById('ProfilePictureUrlView');
            output.src = $(this).val();
        });
    </script>
}