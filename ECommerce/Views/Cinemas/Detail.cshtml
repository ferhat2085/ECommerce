@model Cinema
@{
    ViewData["Title"] = "Cinema Kayıt";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>

            <h1>Cinema Güncelle </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" method="post">
                  
                    <div class="form-group mt-1 ">
                        <label asp-for="Logo" class="control-Label"></label>
                        <input asp-for="Logo" class="form-control" />
                    </div>
                    <div class="form-group text-center">
                        <img id="LogoView" class="border-info rounded-circle" style="max-width=150px;" />

                    </div>
                    <div class="form-group mt-1">
                        <label asp-for="Name" class="control-Label"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group mt-1">
                        <label asp-for="Description" class="control-Label"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Güncelle" class="btn btn-outline-success float-md-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Hepsini Göster</a>
                    </div>



                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>

        $(document).ready(function () {

            var output = document.getElementById('LogoView'); // fotograf eklendıgınde fotografın ekranda  kalmasını sağlar
            output.src = $('#Logo').val();
        });
        $('#Logo').on('change', function () {

            var output = document.getElementById('LogoView');// fotoğrafı kaydetmemden önce ön izleme saglamaktadı..
            output.src = $(this).val();
        });
    </script>

}
